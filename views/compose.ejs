<%- include('partials/header') -%>

<h1 class="compose">Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle" style="font-size: 20px;">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle" required> 
    </div>
    <div class="form-group">
        <label for="postBody" style="font-size: 20px;">Post</label>
        <textarea class="form-control" name="postBody" id="postBody" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary publish-btn btn-lg">Publish</button>
</form>

<%- include('partials/footer') -%>